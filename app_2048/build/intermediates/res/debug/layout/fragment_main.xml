<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AntiqueWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app_2048.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/intro_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/intro"
        android:textSize="35sp" />

  
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prompt_select_game"
        android:layout_below="@+id/name_textview"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_games_layout"
        android:layout_below="@+id/prompt_select_game" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/normal_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_normal" />

                <Button
                    android:id="@+id/practice_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_practice" />

                <Button
                    android:id="@+id/arcade_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_arcade" />

                <Button
                    android:id="@+id/x_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_x" />

                <Button
                    android:id="@+id/corner_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_corner" />

                <Button
                    android:id="@+id/rush_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_rush" />

                <Button
                    android:id="@+id/survival_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_survival" />

                <Button
                    android:id="@+id/zen_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_zen" />

                <Button
                    android:id="@+id/ghost_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_ghost" />

                <Button
                    android:id="@+id/crazy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_crazy" />

                <Button
                    android:id="@+id/custom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="createGame"
                    android:text="@string/mode_custom" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/play_games_layout"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/prompt_select_game"
        android:layout_toRightOf="@+id/relativeLayout1" >

        <TextView
            android:id="@+id/game_mode_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/mode_normal"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/game_desc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_mode_textview"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/mode_desc_normal"
            android:textSize="20sp" />

        <Button
            android:id="@+id/start_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Start Game" />
    </RelativeLayout>

    <TextView
        android:id="@+id/prompt_select_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/continue_game_button"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Start A New Game"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@id/play_games_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/White"
        android:padding="0dp"
        android:layout_margin="0dp" >

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Sign In" />
        
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Sign Out"
            android:visibility="gone" />
        
        <ImageButton
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:onClick="playGames"
            android:scaleType="fitCenter"
            android:src="@drawable/games_achievements_green" />
        
        <ImageButton
            android:id="@+id/leaderboards_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:onClick="playGames"
            android:scaleType="fitCenter"
            android:src="@drawable/games_leaderboards_green" />
        
        <ImageButton
            android:id="@+id/quests_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/White"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:onClick="playGames"
            android:scaleType="fitCenter"
            android:src="@drawable/games_quests_green" />

    </LinearLayout>

    <Button
        android:id="@+id/continue_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intro_textview"
        android:layout_centerHorizontal="true"
        android:text="Continue Saved Game" />

</RelativeLayout><!-- From: file:/Users/Tyler/AndroidStudioProjects/App_2048/app_2048/src/main/res/layout/fragment_main.xml -->