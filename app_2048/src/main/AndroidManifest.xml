<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tytanapps.game2048"
    android:versionCode="24"
    android:versionName="0.6.4" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.tytanapps.game2048.MainApplication"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:backupAgent="com.tytanapps.game2048.TheBackupAgent"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Google Analytics Version v4 needs this value for easy tracking -->
        <meta-data
            android:name="&quot;com.google.android.gms.analytics.globalConfigResource"
            android:resource="@xml/global_tracker" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="@string/android_backup_api_key" />

        <activity
            android:name="com.tytanapps.game2048.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tytanapps.game2048.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.tytanapps.game2048.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tytanapps.game2048.MainActivity" />
        </activity>
        <activity
            android:name="com.tytanapps.game2048.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.tytanapps.game2048.MainActivity" >
        </activity>
        <activity
            android:name="com.tytanapps.game2048.InfoActivity"
            android:label="@string/title_activity_info"
            android:parentActivityName="com.tytanapps.game2048.MainActivity" >
        </activity>
        <activity
            android:name="com.tytanapps.game2048.StatsActivity"
            android:label="@string/title_activity_stats"
            android:parentActivityName="com.tytanapps.game2048.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tytanapps.game2048.MainActivity" />
        </activity>
        <activity
            android:name="com.tytanapps.game2048.CustomIconActivity"
            android:label="@string/title_activity_custom_icon"
            android:parentActivityName="com.tytanapps.game2048.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tytanapps.game2048.SettingsActivity" />
        </activity>
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.tytanapps.game2048.MultiplayerActivity"
            android:label="@string/title_activity_multiplayer"
            android:parentActivityName="com.tytanapps.game2048.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tytanapps.game2048.MainActivity" />
        </activity>
    </application>

</manifest>