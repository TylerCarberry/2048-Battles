<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <ListPreference 
        android:title="Tile Slide Speed"
        android:key="speed"
        android:defaultValue="125"
        android:entries="@array/tileSpeeds"
        android:entryValues="@array/tileSpeedsValues"/>

    <ListPreference
        android:title="Swipe Sensitivity"
        android:key="swipeSensitivity"
        android:defaultValue="75"
        android:entries="@array/swipeSensitivity"
        android:entryValues="@array/swipeSensitivityValues"/>

    <CheckBoxPreference
        android:title="Hide Identity in Multiplayer"
        android:key="hideIdentity"
        android:defaultValue="false" />

</PreferenceScreen>
