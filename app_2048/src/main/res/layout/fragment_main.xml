<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.tytanapps.game2048.MainActivity$PlaceholderFragment">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_games_layout"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/logo_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <ImageButton
            android:id="@+id/single_player_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/single_player_icon"
            android:onClick="onClick"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/single_player_imagebutton"
            android:layout_alignRight="@id/single_player_imagebutton"
            android:layout_below="@id/single_player_imagebutton"
            android:gravity="center_horizontal"
            android:text="Single Player" />

        <ImageButton
            android:id="@+id/multiplayer_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/multiplayer_icon"
            android:onClick="onClick"
            android:layout_alignTop="@+id/single_player_imagebutton"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/multiplayer_imagebutton"
            android:layout_alignRight="@id/multiplayer_imagebutton"
            android:layout_below="@id/multiplayer_imagebutton"
            android:gravity="center_horizontal"
            android:text="Multiplayer" />

        <ImageButton
            android:id="@+id/help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/help_button"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/inbox_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/help_button"
            android:layout_alignParentRight="true"
            android:onClick="playGames"
            android:visibility="gone"
            android:text="Inbox"/>

        <TextView
            android:id="@+id/inventory_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="25sp"
            android:text="Inventory:"/>

        <ImageView
            android:id="@+id/undo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/undo_button"
            android:layout_toRightOf="@id/inventory_textview"
            android:layout_alignBottom="@id/inventory_textview"/>

        <TextView
            android:id="@+id/undo_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/undo_icon"
            android:layout_alignBottom="@+id/undo_icon"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/powerup_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/powerup_button"
            android:layout_toRightOf="@id/undo_inventory"
            android:layout_alignBottom="@+id/undo_icon"/>

        <TextView
            android:id="@+id/powerup_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/powerup_icon"
            android:layout_alignBottom="@+id/undo_icon"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_games_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="0dp"
        android:background="@color/LightBlue"
        android:layout_alignParentBottom="true">
        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick" />
        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/sign_out"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/achievements_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/games_achievements"
            android:background="@color/LightBlue" />

        <ImageButton
            android:id="@+id/leaderboards_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/games_leaderboards"
            android:background="@color/LightBlue" />

        <ImageButton
            android:id="@+id/gifts_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/games_gifts"
            android:background="@color/LightBlue" />

        <ImageButton
            android:id="@+id/quests_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/games_quests"
            android:background="@color/LightBlue" />

    </LinearLayout>

</RelativeLayout>


