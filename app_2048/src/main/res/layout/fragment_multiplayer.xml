<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/multiplayer_fragment"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/PrimaryBackground"
    tools:context="com.tytanapps.game2048.MultiplayerActivity$PlaceholderFragment">

    <ImageButton
        android:id="@+id/app_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_logo"/>

    <Button
        android:id="@+id/recreate_multiplayer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/try_again"
        android:onClick="onClick"
        android:layout_centerInParent="true"
        android:layout_below="@+id/multiplayer_message"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/to_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Game"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/creating_multiplayer_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/multiplayer_message"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/multiplayer_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center"
        android:text="@string/creating_multiplayer_game"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
