<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/multiplayer_activity"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tytanapps.game2048.MultiplayerActivity$PlaceholderFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/quick_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Game"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/in_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debug Info"
            android:onClick="onClick"/>

        <EditText
            android:id="@+id/message_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/to_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To Game"
            android:onClick="onClick"/>

    </LinearLayout>









</RelativeLayout>
